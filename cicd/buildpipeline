pipeline {
    agent any
    tools {
      maven 'mymaven'
      }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['mvnuser_Jenkins_ID']) {
    // scp <src_dir> user@tomcatserverip:/tomcat/webapps
    sh "scp -o StrictHostKeyChecking=no target/*.war mvnuser@35.171.157.77:/home/mvnuser/tomcat/webapps"
}
            }
        }
    }
}
